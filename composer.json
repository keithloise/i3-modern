{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "require": {
        "php": "^7.1 || ^8",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "4.7.3@stable",
        "silverstripe/login-forms": "4.3.0@stable",
        "burnbright/silverstripe-hasonefield": "dev-master",
        "undefinedoffset/sortablegridfield": "dev-master",
        "bummzack/sortablefile": "dev-master",
        "colymba/gridfield-bulk-editing-tools": "dev-master",
        "unclecheese/display-logic": "dev-master",
        "tractorcow/silverstripe-colorpicker": "^4@dev",
        "tractorcow/silverstripe-sliderfield": "dev-master",
        "symbiote/silverstripe-multivaluefield": "^5.0",
        "jinjie/codeeditorfield": "^0.0.4",
        "silverstripe/tagfield": "2.3.*",
        "cwp/starter-theme": "dev-i3-modern",
        "cwp/cwp": "^2.7"
    },
    "require-dev": {
        "sminnee/phpunit": "^5.7",
        "sminnee/phpunit-mock-objects": "^3.4.5"
    },
    "extra": {
        "resources-dir": "_resources",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Pages/Page.php",
            "app/src/PageControllers/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ],
        "expose": [
            "app/css",
            "app/images"
        ]
    },
    "config": {
        "process-timeout": 600
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/i3waitematadhb/cwp-starter-theme.git"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev"
}
